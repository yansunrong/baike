{
  "name": "百科一下",
  "version": "1.1",
  "description": "百科一下，你就知道，来自百度百科官方，让人类更好地认知世界！",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*","webRequest","webRequestBlocking"
  ],
  "background" : {
    "scripts": ["background.js"]
  },
   "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["js/artDialog.js","js/baike.js"],
      "css":["js/skins/default.css"]
    }],
	"browser_action": {
	"default_icon": "icon.png",
	"default_title": "百科一下",
	"default_popup": "popup/popup.html"
	},
  "web_accessible_resources":["js/skins/icons/face-sad.png","js/skins/icons/loading.png"],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self' ; img-src 'self' chrome-extension://'"
}
